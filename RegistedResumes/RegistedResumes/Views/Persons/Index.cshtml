@model IEnumerable<RegistedResumes.Models.Person>

@{
    ViewData["Title"] = "Index Persons";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create</a>

</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Department.Name)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Resume)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Resume)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><br />
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
